<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createAccountLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/groupToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="107dp"
        android:text="@string/group_account_toggle1"
        app:layout_constraintBottom_toTopOf="@+id/email1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email1"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="96dp"
        android:text="@string/prompt_email"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupToggle" />

    <TextView
        android:id="@+id/email2"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="19dp"
        android:text="@string/prompt_email"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/email3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupToggle" />

    <TextView
        android:id="@+id/email3"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="96dp"
        android:text="@string/prompt_email"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupToggle" />

    <Button
        android:id="@+id/createButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="154dp"
        android:text="@string/create_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email3" />

</android.support.constraint.ConstraintLayout>